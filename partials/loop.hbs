{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
  <section class='hero'>
    <div class='container'>
      <div class='centered-row'>
        <h1 class="post-title">{{title}}</h1>
        <p>{{excerpt words="26"}}...</p>
        <p>
          <a class='button' href="{{url}}">Read more</a>
        </p>
      </div>
    </div>
  </section>
{{/foreach}}

